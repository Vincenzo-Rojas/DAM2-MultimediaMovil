<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Contenedor principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="32dp"
        android:layout_marginTop="120dp">

        <!-- Boton INSERT -->
        <Button
            android:id="@+id/btnInsertar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Insertar articulos"
            android:layout_marginBottom="16dp" />

        <!-- Boton UPDATE -->
        <Button
            android:id="@+id/btnActualizar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Actualizar articulos"
            android:layout_marginBottom="16dp" />

        <!-- Boton DELETE -->
        <Button
            android:id="@+id/btnBorrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Borrar articulo"
            android:layout_marginBottom="16dp" />

        <!-- Boton SELECT -->
        <Button
            android:id="@+id/btnMostrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mostrar articulos"
            android:layout_marginBottom="32dp" />

        <!-- TextView para mostrar resultados -->
        <TextView
            android:id="@+id/tvContenido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:scrollbars="vertical"
            android:text="Contenido de la base de datos aparecera aqui"
            android:textSize="18sp"
            android:padding="16dp" />

    </LinearLayout>

</ScrollView>
